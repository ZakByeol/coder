{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc-12 build active file",
			"command": "/usr/bin/gcc-12",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}", // <--- 현재 활성화된 파일만 컴파일
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc-12"
		}
	]
}