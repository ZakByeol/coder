{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc-12 build active file",
			"command": "/usr/bin/gcc-12",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				// 1. **모든 .cpp 파일을 포함**하도록 경로를 와일드카드로 변경
				"${workspaceFolder}/*.c", 
				// 2. 필요하다면 하위 폴더의 파일도 포함 (Linux/macOS 환경에서)
				// "g++ -g $(find ${workspaceFolder} -name '*.cpp')" // 이건 task에서는 잘 작동 안 할 수 있습니다.

				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc-12"
		}
	]
}